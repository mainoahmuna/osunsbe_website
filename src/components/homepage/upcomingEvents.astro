---
import Image from "astro/components/Image.astro";
import Flyer from "../../assets/eventFlyers/stdyhall.png";
---

<div
    class="bg-black p-8 mt-20 mx-auto max-w-screen rounded-lg grid md:grid-col-2 lg:grid-cols-2 place-items-center"
>
    <div>
        <h2 class="text-white text-4xl md:text-6xl tracking-tight">
            Upcoming Events
        </h2>
        <p class="text-white text-xl md:text-2xl tracking-tight">
            Study Hall
            <br />
            Fridays 5:00pm - 6:30pm
            <br />
            <br />
        </p>
        <p class="text-white tracking-tight text-left">
            Join us at the NSBE Study Hall for a focused, collaborative environment
            to connect with peers and excel in your studies. Maximize your productivity
            and achieve your academic goals with us!
        </p>
    </div>

    <div class="flex mt-5">
        <Image src={Flyer} alt="Study Hall" />
    </div>
</div>
<div class="p-16"></div>
